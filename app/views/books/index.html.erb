<main>

 <% if flash[:notice] %>
   <div class="flash">
   <%= flash[:notice] %>
   </div>
 <% else %>
   <div class="flash">
    <%= flash[:alert] %>
   </div>
<% end %>

  <h2>Books</h2>
<!-- 投稿一覧 -->
  <table>
   <thead>
     <tr>
  　　 　 <th>Title</th>
  　　 　 <th>Body</th>
       <th> </th>
       </tr>
    </thead>
    <tbody>
  <!-- 繰り返し-->
     <% @books.each do |book| %>
       <tr>
         <td><%= book.title%></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", book_path(book.id) %> <%= link_to 'Edit', edit_book_path(book.id) %> <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td> </tr>
      <% end %>
    </tbody>
  </table>

<!-- 新規投稿-->
<h3>New book</h3>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
   <%= f.text_field :body %>
  <div>
   <%= f.submit 'Create Book' %>
  </div>
<% end %>

</main>